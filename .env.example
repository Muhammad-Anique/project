# Fitness360 Gym - Environment Variables Example
# Copy this file to .env and fill in your actual values

# =============================================================================
# CONTACT FORM SERVICE
# =============================================================================
# Formspree endpoint for contact form submissions
CONTACT_FORM_ENDPOINT=https://formspree.io/f/your-form-id

# Alternative form services:
# - Netlify Forms: Set to "netlify" to use built-in Netlify forms
# - EmailJS: Set your service ID, template ID, and public key
# EMAILJS_SERVICE_ID=your_service_id
# EMAILJS_TEMPLATE_ID=your_template_id
# EMAILJS_PUBLIC_KEY=your_public_key

# =============================================================================
# ANALYTICS & TRACKING
# =============================================================================
# Google Analytics 4 Measurement ID
GA_TRACKING_ID=G-XXXXXXXXXX

# Google Tag Manager ID (alternative to GA4)
GTM_ID=GTM-XXXXXXX

# Facebook Pixel ID
FB_PIXEL_ID=123456789012345

# Hotjar Site ID for heatmaps and user recordings
HOTJAR_SITE_ID=1234567

# =============================================================================
# GOOGLE SERVICES
# =============================================================================
# Google Maps API key for location map display
GOOGLE_MAPS_API_KEY=AIzaSyXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# Google reCAPTCHA site key for form protection
RECAPTCHA_SITE_KEY=6LeXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# =============================================================================
# SOCIAL MEDIA & INTEGRATIONS
# =============================================================================
# Instagram Basic Display API (for gym photo feed)
INSTAGRAM_ACCESS_TOKEN=IGQVJYOUxxxxxxxxxxxxxxxxxxxxxxxxxx

# YouTube API key (for video content)
YOUTUBE_API_KEY=AIzaSyXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
YOUTUBE_CHANNEL_ID=UCxxxxxxxxxxxxxxxxxxxxxxxxx

# =============================================================================
# THIRD-PARTY SERVICES
# =============================================================================
# Stripe publishable key for membership payments
STRIPE_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxxxxxxxxxxxxxxxx

# PayPal client ID for alternative payments
PAYPAL_CLIENT_ID=AXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXx

# Calendly integration for trainer appointments
CALENDLY_USERNAME=your-calendly-username

# =============================================================================
# CONTENT DELIVERY & OPTIMIZATION
# =============================================================================
# Cloudinary cloud name for image optimization
CLOUDINARY_CLOUD_NAME=your-cloud-name

# ImageKit endpoint for image optimization
IMAGEKIT_ENDPOINT=https://ik.imagekit.io/your-imagekit-id

# =============================================================================
# NOTIFICATION SERVICES
# =============================================================================
# OneSignal App ID for push notifications
ONESIGNAL_APP_ID=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# Mailchimp API key and list ID for newsletter
MAILCHIMP_API_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx-us1
MAILCHIMP_LIST_ID=xxxxxxxxxx

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Development mode (true/false)
NODE_ENV=development

# Local development port
PORT=3000

# API base URL (for future backend integration)
API_BASE_URL=http://localhost:3001

# =============================================================================
# BUSINESS INFORMATION
# =============================================================================
# Contact information (used in contact forms and footer)
BUSINESS_NAME=Fitness360 Gym
BUSINESS_EMAIL=info@fitness360gym.com
BUSINESS_PHONE=+1-555-123-4567
BUSINESS_ADDRESS=123 Fitness Street, Gym City, GC 12345

# Social media handles
FACEBOOK_HANDLE=fitness360gym
INSTAGRAM_HANDLE=fitness360gym
TWITTER_HANDLE=fitness360gym
YOUTUBE_HANDLE=fitness360gym

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable specific features
ENABLE_ONLINE_BOOKING=true
ENABLE_MEMBER_PORTAL=false
ENABLE_LIVE_CHAT=true
ENABLE_PUSH_NOTIFICATIONS=false
ENABLE_DARK_MODE=true

# =============================================================================
# SECURITY
# =============================================================================
# CORS allowed origins (for API requests)
CORS_ORIGINS=https://fitness360gym.com,https://www.fitness360gym.com

# Content Security Policy nonce (if using CSP)
CSP_NONCE=random-nonce-value

# =============================================================================
# NOTES
# =============================================================================
# 1. Never commit the actual .env file to version control
# 2. Keep sensitive keys secure and rotate them regularly
# 3. Use different values for development, staging, and production
# 4. Some services may require domain verification
# 5. Test all integrations in development before deploying